@{
    Layout = "_Layout";  // This makes sure the page uses the same layout as the other pages
    ViewData["Title"] = "Tutoring Calculator";  // Set the title for the page
}


<!DOCTYPE html>
<html lang="en">
<body>
    <div class="container mt-4">
        <h2>@ViewData["Title"]</h2>
        <form id="calculator-form">
            <div class="mb-3">
                <label for="hours" class="form-label">Number of Hours</label>
                <input type="number" class="form-control" id="hours" placeholder="Enter number of hours">
                <div id="hours-error" class="text-danger" style="display: none;">Please enter a positive number.</div>
            </div>
            <div class="mb-3">
                <label for="rate" class="form-label">Hourly Rate</label>
                <input type="text" class="form-control" id="rate" value="50" readonly>
            </div>
            <button type="button" id="calculate-button" class="btn btn-primary">Calculate Total</button>
        </form>

        <div class="mt-3">
            <label for="total" class="form-label">Total</label>
            <input type="text" class="form-control" id="total" readonly>
        </div>

        <div class="mt-3">
            <a href="/" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>

</body>
</html>
